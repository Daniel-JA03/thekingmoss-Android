<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#0A1128" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TÍTULO -->
    <TextView
        android:text="Detalle del Producto"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="6dp">

        <!-- IMAGEN -->
        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:background="#E5E7EB"/>

        <!-- INFO -->
        <TextView
            android:id="@+id/tvNombre"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPrecio"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#16A34A"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCategoria"
            android:textColor="#374151"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvStock"
            android:textColor="#374151"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDescripcion"
            android:textColor="#4B5563"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- CANTIDAD -->
        <TextView
            android:text="Cantidad"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnMenos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/remove"
                android:tint="#16A34A"
                android:contentDescription="Disminuir cantidad"/>

            <TextView
                android:id="@+id/tvCantidad"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B1B1B"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btnMas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/add"
                android:tint="#16A34A"
                android:contentDescription="Aumentar cantidad"/>

        </LinearLayout>

        <!-- TOTAL -->
        <TextView
            android:id="@+id/tvTotal"
            android:text="Total: S/ 0.00"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#16A34A"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ACCIONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnVolver"
                android:text="Ver catálogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnAgregarCarrito"
                android:text="Añadir al carrito"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity"
    android:background="#0A1128">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_checkout"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:text="Finalizar Compra - TheKingMoss"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvResumen"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnConfirmar"
                android:text="Confirmar Compra"
                android:textColor="@android:color/white"
                android:backgroundTint="#28A745"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- MENSAJE DE ÉXITO -->
            <LinearLayout
                android:id="@+id/layoutExito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <TextView
                    android:text="¡Transacción Completa!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#86EFAC"/>

                <TextView
                    android:text="Su pedido ha sido confirmado correctamente."
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
